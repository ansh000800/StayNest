<%-include('../partials/head') %>

<body>
  <%-include('../partials/navbar') %>

  <main>
    <div class="mt-8 max-w-2xl mx-auto bg-red-50 rounded-lg shadow-lg p-8">
      <div class="mb-6">
        <img
          src="/uploads/<%= home.image %>"
          alt="<%= home.houseName %>"
          class="w-full h-64 object-cover rounded-lg"
        />
      </div>

      <div class="space-y-4">
        <h2 class="text-3xl font-bold text-red-600"><%= home.houseName %></h2>

        <div class="text-lg">
          <p class="text-red-700">
            <strong>Location:</strong>
            <span class="text-red-600"><%= home.location %></span>
          </p>
          <p class="text-red-700">
            <strong>Rent:</strong>
            <span class="text-red-600 font-semibold"><%= home.rent %></span>
          </p>
        </div>
      </div>

      <div class="mt-8 p-6 bg-white rounded-lg">
        <h3 class="text-xl font-bold text-red-600 mb-3">Description</h3>
        <p class="text-red-700 leading-relaxed"><%= home.description %></p>
      </div>

      <div class="mt-6 p-6 bg-white rounded-lg">
        <h3 class="text-xl font-bold text-red-600 mb-3">Rating</h3>
        <p class="text-lg text-red-700">
          <span class="text-red-600 font-semibold"><%= home.rating %></span> / 5
          ⭐
        </p>
      </div>

      <div class="mt-8">
        <a
          href="/store/rules/<%= home._id %>"
          class="inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg transition duration-200"
        >
          Download House Rules
        </a>
      </div>
      <div class="mt-8">
        <a
          href="/store/home"
          class="inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg transition duration-200"
        >
          ← Back to Home
        </a>
      </div>
    </div>
  </main>
</body>
