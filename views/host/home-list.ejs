<%- include('../partials/head') %>
<body>
  <%- include('../partials/navbar') %>

  <div class="mt-8 p-8 flex flex-col items-center justify-center text-center">
    <h2 class="text-4xl font-bold text-gray-800 mb-4">Welcome to Host Home List</h2>
    <p class="text-gray-600 text-lg">View all the homes you have registered.</p>
  </div>
    <main class="p-8">
  <h3 class="text-2xl font-semibold mb-4"> Your Registered Homes:</h3>

  <% if (registeredHomes && registeredHomes.length > 0) { %>
    
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <% registeredHomes.forEach(home => { %>
        <li class="bg-white shadow-md rounded-lg p-4 border">
          <div class="flex justify-between items-start mb-2">
        <h4 class="text-xl font-bold text-red-600">
          <%= home.houseName %>
        </h4>
          </div>
          <p class="text-gray-600">
        Location: <%= home.location %>
          </p>
          <p class="text-gray-600">
        Rent: â‚¹ <%= home.rent %>
          </p>
          <img src="/uploads/<%= home.image %>" 
        class="mt-2 w-full h-40 object-cover rounded shadow-lg border border-gray-300" />
          <div class="flex gap-3 mt-4">
            <a href="/host/edit-home/<%= home._id %>?editing=true" class="bg-blue-600 hover:bg-red-900 text-white font-semibold py-2 px-4 rounded transition">Edit</a>
            <form action="/host/delete-home/<%=home._id%>" method="POST">
              <button type="submit" class="bg-blue-600 hover:bg-red-900 text-white font-semibold py-2 px-4 rounded transition">Delete</button>
            </form>
          </div>
          
        </li>
      <% }) %>
        </ul>

    

  <% } else { %>

    <p class="text-gray-500">No homes registered yet.</p>

  <% } %>
</main>

  
</body>

</html>