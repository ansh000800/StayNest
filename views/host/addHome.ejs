<%- include('../partials/head') %>
<body>
  <%- include('../partials/navbar') %>
  <div class="flex items-center justify-center bg-red-50">
    <div class="w-full max-w-md p-8">
      <h1 class="text-5xl font-bold text-red-900 text-center mb-8"><%= editing? "Edit" : "Add" %> your Home Details.</h1>
      <form action="/host/<%= editing? "edit-home" :"add-home"%>" method="POST" class="space-y-4" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= editing? home._id : '' %>">
        <input type="text" name="homeName" value ="<%= editing? home.houseName : '' %>" placeholder="Enter Your House Name" class="w-full px-4 py-2 bg-red-900 text-white rounded placeholder-red-300 focus:outline-none focus:ring-2 focus:ring-red-500" required >
        <input type="text" name="location" value ="<%= editing? home.location : '' %>" placeholder="Location" class="w-full px-4 py-2 bg-red-900 text-white rounded placeholder-red-300 focus:outline-none focus:ring-2 focus:ring-red-500" required>
        <input type="text" name="rent" value ="<%= editing? home.rent : '' %>" placeholder="Expected Rent" class="w-full px-4 py-2 bg-red-900 text-white rounded placeholder-red-300 focus:outline-none focus:ring-2 focus:ring-red-500" required>
        <input type="file" name="image" accept="image/jpg , image/png, image/jpeg"  class="w-full px-4 py-2 bg-red-900 text-white rounded placeholder-red-300 focus:outline-none focus:ring-2 focus:ring-red-500"  >
        <label for="document">Upload Your Rules PDF:</label>
        <input type="file" name="document" accept="application/pdf"  class="w-full px-4 py-2 bg-red-900 text-white rounded placeholder-red-300 focus:outline-none focus:ring-2 focus:ring-red-500"  >
        <textarea name="description" value ="<%= editing? home.description : '' %>" placeholder="Enter Description "  rows="3" class="w-full px-4 py-2 bg-red-900 text-white rounded placeholder-red-300 focus:outline-none focus:ring-2 focus:ring-red-500 resize-none" ><%= editing? home.description : '' %></textarea>
        <input type="number" name="rating" value ="<%= editing? home.rating : '' %>" placeholder="Rating (1-5)" min="1" max="5" step="0.1" class="w-full px-4 py-2 bg-red-900 text-white rounded placeholder-red-300 focus:outline-none focus:ring-2 focus:ring-red-500" required>
        <input type="submit" value = "<%= editing? "Update Home" : "Add Home" %>" class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded transition">
      </form>
    </div>
  </div>
</body>
</html>